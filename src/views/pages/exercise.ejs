<body>
    <div class=" flex flex-col  md:w-1/2 md:mx-auto xl:w-1/3">
        <h1 id="exerciseTitle" class="text-xl text-red-900 font-bold m-1 my-2 text-left md:text-2xl md:my-2 xl:my-4 ">  </h1>
        <div class="flex flex-row justify-start border-b-2 border-gray-700 ">
            <p id="exerciseCategory" class=" font-semibold border-r-2 rounded-t-lg p-1 border-gray-500 w-fit"> </p>
            <p id="exerciseSkillLevel" class=" font-semibold border-r-2 rounded-t-lg  p-1 border-gray-500 w-fit">  </p>
        </div>
        <p id="exerciseBody" class="bg-white text-black m-2 mr-6 rounded-lg drop-shadow-lg p-2 text-left leading-loose"> </p>

        <div class="flex justify-center"> 
            <button type="button" id="completedBtn" class=" text-black bg-white w-fit rounded-md drop-shadow-lg
        hover:bg-green-600 cursor-pointer"  
        <% if (showCompleteBtn) { %> 
            style="display:block" 
        <% } else { %> 
            style="display:none;" 
        <% } %> ><p class="px-0.5">Complete</p></button>
        </div>
    </div>
</body>